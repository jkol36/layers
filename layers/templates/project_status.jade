extends ./partials/_base.jade
{% load thumbnail %}

block title
	title 43Layers - Project Status

block content
	include ./partials/_header.jade
	.content
		.submit-your-idea
			.container
				.row-text-center.process
					.col-md-3
						h3 1. Submit Your Idea
							a.submit.center-block
					.col-md-3
						h3 2. Meet Your Designer
							{% if project.project_status == "design_center" %}
							a.meet-active.center-block
							{% else %}
							a.meet.center-block
							{%endif %}
					.col-md-3
						h3 3. View Digital Preview
							{% if project.project_status == "Shipping" %}
							a.view-active.center-block
							{% else %}
							a.view.center-block
							{%endif %}
					.col-md-3
						h3 4. Hold In Your Hands
							{% if project.project_status == "Complete" %}
							a.hold-active.center-block
							{% else %}
							a.hold.center-block
							{% endif %}
				ul.nav.nav-pills.process-mobile
					li.active
					li
					li
					li
		.container
			.row(style="margin-top:5%;")
				.col-md-3
				.col-md-3
					h1 project title:
				.col-md-3
					h1 {{project.title}}
			.row(style="margin-top:5%;")
				.col-md-3
				.col-md-3
					h1 project status:
				.col-md-3
					{% if project.project_status == "submit_idea" %}
					h1 Submit Idea
					{% endif %}
					{% if project.project_status == "design_center" %}
					h1 Design Center
					{%endif%}
					{% if project.project_status == "Shipping" %}
					h1 Shipping
					{%endif %}
					{% if project.project_status == "Complete" %}
					h1 Complete
					{%endif%}
					
			.row(style="margin-top:5%;")
				.col-md-3
				.col-md-3
					h1 Designer Assigned:
				.col-md-3
					h1 {{project.designer_assigned}}
			if photos == 'None'
				.row(style="margin-top:5%;")
					.col-md-3
					.col-md-3
						h1 Photos
					.col-md-3
						h1 You did not submit photos
			else
				.row(style="margin-top:5%;")
					.col-md-3
					.col-md-3
						h1 Photos:
					.col-md-5
						for photo in photos
							img(src="{{photo.image.url}}", width="100", height="100")





				

