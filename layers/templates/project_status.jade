extends ./partials/_base.jade
{% load thumbnail %}

block title
	title 43Layers - Project Status

block content
	include ./partials/_header.jade
	.content
		.submit-your-idea
			if project.project_status == "submit_idea"
				h1.text-center 1. Submit Your Idea.
			elif project.project_status == "design_center"
				h1.text-center 2. Design Center.

			elif project.project_status == "Shipping"
				h1.text-center 4. Shipping.

			elif project.project_status == "manufacturing"
				h1.text-center 3. Manufacturing

			.container
				.row-text-center.process
					.col-md-3
						h3 1. Submit Your Idea
							{% if project.project_status == "submit_idea" %}
							a.submit-active.center-block
							{% else %}
							a.submit.center-block
							{%endif %}

					.col-md-3
						h3 2. Meet Your Designer
							{% if project.project_status == "design_center" %}
							a.meet-active.center-block
							{% else %}
							a.meet.center-block
							{%endif %}
					.col-md-3
						h3 3. View Digital Preview
							{% if project.project_status == "Shipping" %}
							a.view-active.center-block
							{% else %}
							a.view.center-block
							{%endif %}
					.col-md-3
						h3 4. Hold In Your Hands
							{% if project.project_status == "Complete" %}
							a.hold-active.center-block
							{% else %}
							a.hold.center-block
							{% endif %}
				ul.nav.nav-pills.process-mobile
					li.active
					li
					li
					li
		
				
			.row(style="margin-top:5%;")
				.col-md-4
					h2 Project Status:
				.col-md-8
					{% if project.project_status == "submit_idea" %}
					p Thanks for submitting your project! We are in the process of assigning you the perfect designer to bring your idea to life. You will be notified by email shortly :)
					{% endif %}
					{% if project.project_status == "design_center" %}
					p Thanks for submitting your project! We are in the process of assigning you the perfect designer to bring your idea to life. You will be notified by email shortly :)
					{%endif%}
					{% if project.project_status == "manufacturing" %}
					p Your product design has been completed and your product is being made! You will receive an email update as soon as we finish making it.
					{%endif %}
					{% if project.project_status == "Shippinng" %}
					p Your product has been made and is now on it's way to you! You will receive order an order tracking number by email.
					{%endif %}
					{% if project.project_status == "Complete" %}
					p This project has been complete!
					{%endif%}
					
			.row(style="margin-top:5%;")
				.col-md-4
					h2 Project Details:
				.col-md-8
					p
						span(style="font-weight:800;") Project Name: 
						{{project.title}}
					p 
						span(style="font-weight:800;") Project Description:
						{{project.description}}
					p
						span(style="font-weight:800;") Budget:
						${{project.budget_min}} to ${{project.budget_max}}
					p
						span(style="font-weight:800;") Due Date:
						{{project.due_date}}
			if photos == 'None'
				.row(style="margin-top:5%;")
					.col-md-4
						h2 Inspiration Board
					.col-md-8
						h2 You did not submit any photos.
			else
				.row(style="margin-top:5%;")
					.col-md-4
						h2 Inspiration Board:
					.col-md-8
						for photo in photos
							img(src="{{photo.image.url}}", width="100", height="100")





				

