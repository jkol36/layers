.modal.fade#editProjectTitle(role="dialog", tabindex="-1", aria-labelledby="editProjectTitle", aria-hidden="true")
	.modal.dialog
		.modal.content
			.modal-header
				button(type="button", class="close", data-dismiss="modal", aria-label="Close")
					span(aria-hidden="true")&times;
				h4.changeTitle Change the title of your project
			.modal-body
				.form-group
					- csrf_token
					input.form-control(type="text", id="titleInput", name="New_Title")
					button(type="submit").btn.btn-primary Change
			.modal-footer
				button(type="button", class="btn btn-default, data-dismiss="modal") Close
				button(type="button", class="btn btn-primary") Save Changes
